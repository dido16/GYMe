<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gym_black_background">

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="@color/gym_dark_card">

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 KM"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JARAK TEMPUH"
            android:textColor="#888"
            android:textSize="12sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="@color/gym_accent"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnStartRun"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="MULAI TRACKING"
            android:backgroundTint="@color/gym_accent"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LIHAT RIWAYAT LARI"
            android:backgroundTint="#333333"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

</LinearLayout>