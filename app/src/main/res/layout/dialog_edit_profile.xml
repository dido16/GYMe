<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#1E1E1E"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Body Stats"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEIGHT (KG)"
            android:textColor="#666"
            android:textSize="10sp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etEditWeight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_bg_dark"
            android:hint="60"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEIGHT (CM)"
            android:textColor="#666"
            android:textSize="10sp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etEditHeight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_bg_dark"
            android:hint="170"
            android:inputType="number"
            android:textColor="@color/white"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AGE (YEARS)"
            android:textColor="#666"
            android:textSize="10sp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etEditAge"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_bg_dark"
            android:hint="20"
            android:inputType="number"
            android:textColor="@color/white"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="BATAL"
                android:textColor="#888"
                android:backgroundTint="#2A2A2A"
                android:layout_marginEnd="8dp"
                app:cornerRadius="12dp"/>

            <Button
                android:id="@+id/btnSaveProfile"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Simpan"
                android:textColor="#121212"
                android:textStyle="bold"
                android:backgroundTint="@color/gym_accent"
                android:layout_marginStart="8dp"
                app:cornerRadius="12dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>